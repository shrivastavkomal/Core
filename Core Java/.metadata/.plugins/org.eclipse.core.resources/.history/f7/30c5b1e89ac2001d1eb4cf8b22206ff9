package in.co.polymorphism;

public class test_shape {

	public static void main(String[] args) {
		rectangle r = new rectangle("Red", 5,10, 20);
		r.getBordetrwidth();
		r.getColor();
		r.getLength();
		r.getWidth();
		r.getBordetrwidth();
		System.out.println(r.getColor());
		System.out.println(r.area());
		System.out.println(r.getLength());
		System.out.println(r.getBordetrwidth());
		
		
		//circle
		
		circle c = new circle("Yellow", 20, 15);
		System.out.println(c.getColor());
		System.out.println(c.area1());
		System.out.println(c.getRadius());
	      System.out.println(c.getBordetrwidth());
		
		
		System.out.println(c.area1());
		
		//triangle
		triangle t = new triangle("Pink", 12, 30, 30);		
		System.out.println(t.getColor());
		System.out.println(t.area2());
		System.out.println(t.getHeight());
		System.out.println(t.getBase());
		
		System.out.println(t.area2());
	}
}
